
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="w-50 mx-auto ">
    <h3 class="text-center">Đặt lại mật khẩu</h3>
    <form id="resetPassword">
        <div class="form-group active">
            <label>Mật khẩu</label>
            <input type="text" name="NewPassword" id="NewPassword" class="form-control">
            <label class="error" for="NewPassword" style="display: none;"></label>
        </div>
        <div class="form-group active mb-0">
            <label>Nhập lại mật khẩu</label>
            <input type="text" name="ConfirmPassword" id="ConfirmPassword" class="form-control">
            <label class="error" for="ConfirmPassword" style="display: none;"></label>
        </div>
        <input type="hidden" value="@ViewBag.ResetCode" />
        <div onclick="ResetPassword" class="submit-regisLogin submit-modal fw-bold text-white py-3 text-center w-100" style="background-color: #333f48;">
            Tiếp tục
        </div>
    </form>
</div>