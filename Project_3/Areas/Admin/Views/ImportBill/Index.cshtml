
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="~/Scripts/dirPagination.js"></script>
    <script src="~/Assets/Admin/FileAngularjs/ImportBill/ImportBillHome.js"></script>
}

@section styles {
    <style>
        .btn-tool {
            color: #fff;
            width: 35px;
            height: 35px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 3px;
        }

            .btn-tool:hover {
                color: #fff;
                cursor: pointer;
            }
    </style>
    }

<main id="main" class="main" ng-app="importBillApp" ng-controller="importBillController">

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body pt-4">
                        <div class="text-end mb-3 d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <input type="text" class="input-searchView me-3" ng-model="searchText" placeholder="Tìm kiếm theo tên" />
                                <select ng-model="pageSize" class="limitShow">
                                    <option ng-click="getPageSize('5')" value="5">5</option>
                                    <option ng-click="getPageSize('10')" value="10">10</option>
                                    <option ng-click="getPageSize('15')" value="15">15</option>
                                    <option ng-click="getPageSize('20')" value="20">20</option>
                                </select>
                            </div>
                            <div class="text-end">
                                <a href="/Admin/ImportBill/Create" class="btn btn-primary me-2"><i class="fa-solid fa-plus"></i> Tạo hóa đơn nhập</a>
                                <button class="btn btn-primary me-2"><i class="fa-solid fa-file-import"></i> Import</button>
                                <button class="btn btn-primary"><i class="fa-solid fa-file-export"></i> Xuất file</button>
                            </div>
                        </div>
                        <table class="table table-hover table-bordered pt-4">
                            <thead class="table-primary">
                                <tr>
                                    <th>Mã đơn</th>
                                    <th>
                                        Nhân viên tạo
                                    </th>
                                    <th>
                                        Thời gian
                                    </th>
                                    <th>Tổng tiền</th>
                                    <th>
                                        Chi tiết
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr dir-paginate="i in ImportBills | itemsPerPage: pageSize | filter: searchText">
                                    <td>{{i.ImpId}}</td>
                                    <td>
                                        {{i.User.Name}}
                                    </td>
                                    <td>
                                        {{i.ImpDate}}
                                    </td>
                                    <td>{{i.MoneyTotal}}</td>
                                    <td>
                                        <a class="btn-tool bg-primary" ng-click="showDetail(i.ImpId)" data-bs-toggle="modal" data-bs-target="#SeeDtail"><i class="fa-solid fa-eye"></i></a>
                                        <a class="btn-tool btn-delete" ng-click="cancel($index,i)"><i class="fa-solid fa-trash" style="pointer-events:none;"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <dir-pagination-controls></dir-pagination-controls>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="modal fade" id="SeeDtail" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-body">
                    <div>
                        <div class="order-detail-top">
                            <div class="account-page-title">
                                <h1 class="title">
                                    Chi tiết đơn hàng <span>#CNF{{i.ImpId}}</span>
                                </h1>
                            </div>
                            <div class="order-date"><span class="label">Ngày tạo:</span> <span>{{i.ImpDate}}</span></div> <span class="order-status" style="color: rgb(99, 177, 188);">{{Order.Status}}</span>
                        </div>
                        <div class="order-details-items mt-3">
                            <table class="table-order-items">
                                <thead>
                                    <tr>
                                        <th class="col name">Sản phẩm</th>
                                        <th class="col qty">Số lượng</th>
                                        <th class="col ">Giá tiền</th>
                                        <th class="col price-sale">Giảm giá</th>
                                        <th class="col total">Tổng tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="item in Order.OrderDetailDTOs">
                                        <td class="col name">
                                            <div class="order-product">
                                                <div class="order-product-photo">
                                                    <img src="/Upload/Product/{{item.ProId}}/{{item.Image}}" alt="{{item.NameProduct}}">
                                                </div>
                                                <div class="order-product-details">
                                                    <div class="order-product-name">
                                                        {{item.NameProduct}}
                                                    </div>
                                                    <div class="order-product-option">
                                                        <span>Màu:</span> <span>
                                                            <span class="swatch-option color" style="background-image: url('/Upload/ColorImage/{{item.ProColorId}}/{{item.ImageColor}}'); "></span>
                                                        </span>
                                                    </div>
                                                    <div class="order-product-option">
                                                        <span>Kích cỡ :</span> <span>
                                                            {{item.NameSize}}
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="col qty">{{item.Quantity}}</td>
                                        <td class="col">
                                            {{item.Price}}
                                        </td>
                                        <td class="col price-sale">
                                            0 ₫
                                        </td>
                                        <td class="col total">{{item.Price * item.Quantity}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="order-details-totals">
                            <table>
                                <tbody>
                                    <tr class="quantity">
                                        <th>Tổng sản phẩm</th>
                                        <td>{{Order.OrderDetailDTOs.Count}}</td>
                                    </tr>
                                    <tr class="sub-totals">
                                        <th>Tổng giá bán</th>
                                        <td>{{Order.MoneyTotal}}</td>
                                    </tr>
                                    <tr>
                                        <th>Chiết khấu</th>
                                        <td>0 ₫</td>
                                    </tr>
                                    <!---->
                                    <!---->
                                    <!---->
                                    <tr>
                                        <th>Vận chuyển</th>
                                        <td>30.000 ₫</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr class="grand-totals">
                                        <th style="color: rgb(51, 63, 72); font-weight: 600;">Tổng tiền thanh toán</th>
                                        <td style="font-weight: 600;">{{Order.MoneyTotal}}</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

</main>

