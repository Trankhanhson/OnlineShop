@model IEnumerable<Models.Framework.ProductColor>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script src="~/Assets/Admin/js/ColorColntroller.js"></script>
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageColor)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr id="row_@item.ProColorID">
                <td>
                    @Html.DisplayFor(modelItem => item.NameColor)
                </td>
                <td>
                    <img src="@item.ImageColor" style="border-radius:50%; text-align:center;width:30px;height:30px;" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProColorID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ProColorID }) |
                    <a class="btn-deleteColor" id="@item.ProColorID"> Delete</a>
                </td>
            </tr>
        }

    </table>
</body>
</html>
