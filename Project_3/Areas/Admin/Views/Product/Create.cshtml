@model Models.Framework.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Assets/Admin/js/product/product.js"></script>
    <script src="~/Assets/Admin/js/product/Createproduct.js"></script>

    <!--Dùng để thao tác với procat-->
    <script src="~/Scripts/ng-file-upload-shim.min.js"></script>
    <script src="~/Scripts/ng-file-upload.min.js"></script>
    <script src="~/Assets/Admin/FileAngularjs/Product/C_ProcatInProduct.js"></script>
}


<main id="main" class="main" ng-app="ProductApp">

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body pt-4">
                        <form enctype="multipart/form-data" id="formProduct">
                            <div class="d-flex mb-3">
                                <label for="inputText" class=" col-form-label label-create">Tên sản phẩm</label>
                                <div class=" flex-grow-1">
                                    <input type="text" name="name" id="name" class="form-control text-dark" autofocus>
                                </div>
                            </div>
                            <div class="d-flex mb-3">
                                <label for="inputText" class="col-form-label label-create">Chất liệu</label>
                                <div class="flex-grow-1 ">
                                    <input type="text" id="material" name="material" class=form-control text-dark">
                                </div>
                            </div>
                            <div class="d-flex mb-3">
                                <label for="inputText" class="label-create col-form-label">Mô tả</label>
                                <div class="flex-grow-1">
                                    <input type="text" id="description" name="description" class="form-control text-dark">
                                </div>
                            </div>
                            <div class="row">
                                <div class="d-flex mb-3 col-6">
                                    <label class="label-create col-form-label">Loại sản phẩm</label>
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-content-center select-procat">
                                            <select class="form-select border-0 shadow-none" style="cursor:pointer;outline:none" id="ProCatId">
                                                @foreach (var item in ViewBag.listproCat)
                                                {
                                                    <option value="@item.ProCatId">@item.Name < @item.Category.Name < @item.Category.type</option>
                                                }
                                            </select>
                                            <div class="my-auto px-1" style="cursor:pointer" data-bs-toggle="modal" data-bs-target="#AddProCat"><i class="fa-solid fa-plus"></i></div>

                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex mb-3 col-6">
                                    <label for="inputText" class="label-create col-form-label">Giá nhập</label>
                                    <div class="flex-grow-1">
                                        <input type="number" id="importPrice" name="importPrice" class="form-control text-dark">
                                    </div>
                                </div>
                                <div class="d-flex mb-3 col-6">
                                    <label for="inputText" class="label-create col-form-label">Giá bán</label>
                                    <div class="flex-grow-1">
                                        <input type="number" id="Price" name="Price" class="form-control text-dark">
                                    </div>
                                </div>
                                <div class="d-flex mb-3 col-6">
                                    <label for="inputText" class="label-create col-form-label">Giá khuyến mại</label>
                                    <div class="flex-grow-1">
                                        <input type="number" id="pricePromotion" name="pricePromotion" class="form-control text-dark">
                                    </div>
                                </div>
                                <div class="d-flex mb-3 col-6">
                                    <label for="inputText" class="label-create col-form-label">Bắt đầu khuyến mại</label>
                                    <div class="flex-grow-1">
                                        <input type="text" id="startPromotion" name="startPromotion" class="form-control text-dark" readonly>
                                    </div>
                                </div>
                                <div class="d-flex mb-3 col-6">
                                    <label for="inputText" class="label-create col-form-label">Kết thúc khuyến mại</label>
                                    <div class="flex-grow-1">
                                        <input type="text" id="stopPromotion" name="stopPromotion" class="form-control text-dark">
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between px-3 py-2 mt-3 align-items-center text-dark font-weight-bold method-header" data-bs-toggle="collapse" href="#method" aria-expanded="false" aria-controls="method">
                                <span>Thuộc tính</span>
                                <span><i class="fa-solid fa-chevron-up"></i></span>
                            </div>
                            <div class="collapse method-content px-4 pt-4 p2-3" id="method">
                                <div class="d-flex align-items-center justify-content-between mb-4">
                                    <label for="" class="text-dark mb-0 font-weight-bold">Màu sắc</label>
                                    <div class="flex-grow-1 wrap-color wrap-property d-flex">
                                        <div class="dropdown method-dropdown__wrap">
                                            <button class="btn dropdown-toggle method-dropdown" style="border: none;border-bottom: 2px solid rgb(202, 202, 202); border-radius: 0px;" type="button" id="dropdownColor" data-bs-toggle="dropdown" aria-expanded="false">
                                                Nhấn để chọn màu
                                            </button>
                                            <ul class="dropdown-menu method-dropdown__list shadow" aria-labelledby="dropdownColor">
                                                @foreach (var color in ViewBag.ListColor)
                                                {
                                                    <li class=""><a class="dropdown-item method-dropdown__item-link " href="#" data-idColor="@color.ProColorID"><div class="method-image-color" style="background-image: url('@color.ImageColor');"></div><p>@color.NameColor </p></a></li>
                                                }
                                            </ul>
                                        </div>
                                        <div class="my-auto px-1" style="cursor:pointer" data-bs-toggle="modal" data-bs-target="#AddColor"><i class="fa-solid fa-plus"></i></div>

                                    </div>
                                </div>
                                <div class="wrap-imgItem">

                                </div>

                                <div class="d-flex align-items-center justify-content-between mb-4 mt-5">
                                    <label for="" class="text-dark mb-0 font-weight-bold">Kích thước</label>
                                    <div class="flex-grow-1 d-flex wrap-size wrap-property">
                                        <div class="dropdown method-dropdown__wrap">
                                            <button class="btn dropdown-toggle method-dropdown " style="border: none;border-bottom: 2px solid rgb(202, 202, 202);border-radius:0px;" type="button" id="dropdownColor" data-bs-toggle="dropdown" aria-expanded="false">
                                                Nhấn để chọn màu
                                            </button>
                                            <ul class="dropdown-menu method-dropdown__list shadow" aria-labelledby="dropdownColor">
                                                @foreach (var size in ViewBag.ListSize)
                                                {
                                                    <li class="method-dropdown__item"><a class="dropdown-item method-dropdown__item-link" data-idSize="@size.ProSizeID" href="#"><p>@size.NameSize</p></a></li>
                                                }
                                            </ul>
                                        </div>
                                        <div class="my-auto px-1" style="cursor:pointer" data-bs-toggle="modal" data-bs-target="#AddSize"><i class="fa-solid fa-plus"></i></div>
                                        <!-- <input type="text" id="size-input" class="input-create text-dark" placeholder="Nhập giá trị và nhấn enter"> -->
                                    </div>
                                </div>

                            </div>
                            <div class="box-options mt-4 mb-4">

                            </div>
                            <div class="text-end">
                                <div class="btn btn-primary me-3 btn-create"><i class="fa-solid fa-floppy-disk"></i> Lưu</div>
                                <div class="btn-cancel btn bg-secondary text-white" onclick="CancelClick()"><i class="fa-solid fa-ban"></i> Bỏ qua</div>
                            </div>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--Thêm loại sản phẩm-->
    <div class="modal fade" ng-controller="ProCatController" id="AddProCat" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Thêm danh mục</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form name="createForm">
                        <div class="form-horizontal">

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-4 col-form-label">Tên loại sản phẩm</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="Name" ng-model="proCat.Name" required>
                                    <span ng-show="createForm.$submitted || createForm.Name.$dirty">
                                        <span class="error" ng-show="createForm.Name.$error.required">Tên loại sản phẩm không được để trống</span>
                                    </span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-4 col-form-label">Select</label>
                                <div class="col-sm-8">
                                    <select class="form-select" aria-label="Default select example" ng-model="proCat.CatID">
                                        @foreach (var item in ViewBag.CatList)
                                        {
                                            <option value="@item.CatID">@item.Name - @item.type</option>
                                        }
                                    </select>

                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-4 col-form-label">Ảnh</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="file" id="formFile" ngf-select="SelectImage($files)">
                                    <span>
                                        <span class="error" ng-show="errorImage">Bạn cần chọn hình ảnh</span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <div class="btn btn-primary" ng-click="SaveAdd()">Lưu</div>
                </div>

            </div>
        </div>
    </div>

    <!--Thêm color-->
    <div class="modal fade" ng-controller="ColorController" id="AddColor" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Thêm màu</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form name="createForm">
                        <div class="form-horizontal">

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-4 col-form-label">Tên loại sản phẩm</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="Name" ng-model="proColor.NameColor" required>
                                    <span ng-show="createForm.$submitted || createForm.NameColor.$dirty">Bạn cần nhập tên của màu</span>
                                    </span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-4 col-form-label">Ảnh</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="file" id="formFile" ngf-select="SelectImage($files)">
                                    <span>
                                        <span class="error" ng-show="errorImage">Bạn cần chọn hình ảnh</span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <div class="btn btn-primary" ng-click="SaveAdd()">Lưu</div>
                </div>

            </div>
        </div>
    </div>

    <!--Thêm size-->
    <div class="modal fade" ng-controller="SizeController" id="AddSize" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Thêm kích thước</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form name="createForm">
                        <div class="form-horizontal">

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-4 col-form-label">Tên loại sản phẩm</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="Name" ng-model="proSize.NamSize" required>
                                    <span ng-show="createForm.$submitted || createForm.proSize.$dirty">Bạn cần nhập tên size</span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <div class="btn btn-primary" ng-click="SaveAdd()">Lưu</div>
                </div>

            </div>
        </div>
    </div>
</main>
